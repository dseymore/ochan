							autoscroll = false;
							a.innerHTML = 'Autoscroll Off';
							message = message + ' disabled.';
						}else{
							autoscroll = true;
							a.innerHTML = 'Autoscroll On';
							message = message + ' enabled.';
						} 
						${esc.dollar}.jGrowl(message, { life: 10000, header: "Autoscroll"});
					}
