			kl5.enable();
			
			##alt + shift + a = autoscroll toggle
			var kl4 = new YAHOO.util.KeyListener(document, {alt: true, shift:true, keys:65 }, { fn:function(event){ toggleScroll(); return false; } } );
			kl4.enable();
			
			##alt + shift + w = help (fucking H is being used by the help in the browser.. damnit)
			var helpKey = new YAHOO.util.KeyListener(document, {alt: true, shift:true, keys:87 }, { fn:function(event){ 
				growlHelp();
			} } );
			helpKey.enable();
			
			});   	
